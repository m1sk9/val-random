{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": ["src/**/*.{js,jsx,ts,tsx}", "farm.config.ts", "biome.jsonc"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
